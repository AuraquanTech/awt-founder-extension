{
  "manifest_version": 3,
  "name": "Superpower ChatGPT 2.0",
  "version": "2.1.0",
  "description": "The superior, open-source ChatGPT enhancement extension. Privacy-first, feature-rich, and built with security in mind.",
  "author": "Competition Team",
  "homepage_url": "https://github.com/superpower-chatgpt-2.0",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Superpower ChatGPT 2.0",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://perplexity.ai/*",
        "https://www.perplexity.ai/*",
        "https://gemini.google.com/*",
        "https://poe.com/*",
        "https://copilot.microsoft.com/*",
        "https://www.bing.com/chat*",
        "https://you.com/*",
        "https://huggingface.co/chat*",
        "https://grok.x.ai/*",
        "https://x.com/i/grok*"
      ],
      "js": [
        "content/content-script.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "background/*",
        "components/*",
        "content/*",
        "scripts/*",
        "scripts/**/*",
        "shared/*",
        "utils/*"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "downloads",
    "alarms"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://perplexity.ai/*",
    "https://www.perplexity.ai/*",
    "https://gemini.google.com/*",
    "https://poe.com/*",
    "https://copilot.microsoft.com/*",
    "https://www.bing.com/*",
    "https://you.com/*",
    "https://huggingface.co/*",
    "https://grok.x.ai/*",
    "https://x.com/*"
  ],
  "optional_permissions": [
    "notifications",
    "clipboardWrite"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src 'none';"
  },
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle Superpower ChatGPT 2.0"
    },
    "quick-export": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Quick export current conversation"
    },
    "search-conversations": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Search conversations"
    },
    "toggle-prompts": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Toggle Prompt Manager"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "minimum_chrome_version": "88",
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
